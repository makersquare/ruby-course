    <!-- Custom Theme JavaScript -->
    <script src="/javascripts/grayscale.js"></script>
    <script>
        $(document).ready(function(){

            var newGenreInput = $('input.new-genre')
            newGenreInput.hide();
            $('button.new-genre').on('click', function(){
                newGenreInput.toggle();
                $("input.genre").removeAttr("checked");
                newGenreInput.val("");
                $('div.radio').toggle();
            })
        });

    </script>

</body>

