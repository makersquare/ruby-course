                        <a class="page-scroll" href="#contact">Contact</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Intro Header -->
    <header class="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h1 class="brand-heading">Songify</h1>
                        <p class="intro-text">where words fail<br><strong>MUSIC SPEAKS</strong></p>
                        <a href="#songs" class="btn btn-circle page-scroll">
                            <i class="fa fa-angle-double-down animated"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- About Section -->
    <section id="add" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>Add a Song</h2>
                <p></p>
                <table class="add-song-table">
                    <form action="/" method="post">
                        <tr>
                            <div class="title">
                                <th><label for="title">Title: </label></th>
                                <td><input type="text" id="title" name="title" class="text-box"></td>
                            </div>
                        </tr>
                        <tr>
                            <div class="artist">
                                <th><label for="artist">Artist: </label></th>
                                <td><input type="text" id="artist" name="artist" class="text-box"></td>
                            </div>
                        </tr>
                        <tr>
                            <div class="album">
                                <th><label for="album">Album: </label></th>
                                <td><input type="text" id="album" name="album" class="text-box"></td>
                            </div>
                        </tr>
                        <tr>
                            <div class="year">
                                <th><label for="year">Year: </label></th>
                                <td><input type="text" id="year" name="year" class="text-box"></td>
                            </div>
                        </tr>
                        <tr>
                            <div class="genre">
                                <th><label for="genre" class="genre">Genre: </label></th>
                                <td>
                                    <% genres.each do |genre| %>
                                        <div class="radio">
                                            <input type="radio" class="genre" name="genre" value="<%= genre.name %>"><%= genre.name %>
                                        </div>
                                    <% end %>
                                    <div class="new-genre">
                                        <button type="button" name="new-genre" class="new-genre btn btn-default submit">New Genre</button>
                                    </div>
                                    <!-- <label for="other-genre" class="other">New </label>-->
                                    <input type="text" name="other-genre" class="new-genre genre text-box">

                                </td>
                            </div>
                        </tr>
                        <tr>
                            <div class="rating">
                                <th><label for="rating">Rating: </label></th>
                                <td><select id="rating" name="rating" class="select-box">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select></td>
                            </div>
                        </tr>
                        <tr>
                            <div class="submit">
                                <th colspan="2"><input type="submit" class="btn btn-default submit"></th>
                            </div>
                        </tr>
                    </form>
                </table>
            </div>
        </div>
    </section>

    <!-- Songs Section -->
    <section id="songs" class="content-section text-center">
        <div class="download-section">
            <div class="container">
                <div class="col-lg-8 col-lg-offset-2">
                    <h2>Songs</h2>
                    <p></p>
                    <table class="songs-table" cellspacing="1" cellpadding="2" border="1">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Artist</th>
                                <th>Album</th>
                                <th>Year</th>
                                <th>Genre</th>
                                <th>Rating</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% songs.each do |song| %>
                                <tr>
                                    <td><%= song.title %></td>
                                    <td><%= song.artist %></td>
                                    <td><%= song.album %></td>
                                    <td><%= song.year %></td>
                                    <td><%= Songify.genres.get_genre(song.genre_id).first["name"] %></td>
                                    <td><%= song.rating %></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                    <!-- <a href="#" class="btn btn-default btn-lg">Visit Songs Page</a> -->
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>Contact Songify</h2>
                <p>Feel free to email us to provide some feedback, give us suggestions, or to just say hello!</p>
                <p><a href="mailto:#"></a>
                </p>
                <ul class="list-inline banner-social-buttons">
                    <li>
                        <a href="https://twitter.com/SBootstrap" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter</span></a>
                    </li>
                    <li>
                        <a href="#" class="btn btn-default btn-lg"><i class="fa fa-facebook fa-fw"></i> <span class="network-name">Facebook</span></a>
                    </li>
                    <li>
                        <a href="https://plus.google.com/+Startbootstrap/posts" class="btn btn-default btn-lg"><i class="fa fa-google-plus fa-fw"></i> <span class="network-name">Google+</span></a>
                    </li>
                </ul>
            </div>
        </div>
    </section>

