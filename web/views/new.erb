<html>
<head>
	<title>Songify: New Song</title>
	<link rel="stylesheet" type="text/css" href="/stylesheets/css/normalize.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/css/main.css">
</head>
<body>
	<header class="cf">
		<h1><a href="/index">Songify</a></h1>
		<ul>
			<li><a href="/show">Show songs</a></li>
			<li><a href="/new">Add new song</a></li>
		</ul>
	</header>	

	<h2>Add New Song</h2>

	<form action='/create' method='post'>
		<ul>
			<li>
				<label class="input-label" for="title">Title</label>
				<input class="user-input" type="text" name="title">
			</li>
			<li>
				<label class="input-label" for="artist">Artist</label>
				<input class="user-input" type="text" name="artist">
			</li>
			<li>
				<label class="input-label" for="album">Album</label>
				<input class="user-input" type="text" name="album">
			</li>
			<% if @genres.empty? %>
				<li>
					<label class="input-label" for="genre">Genre</label>
					<input class="user-input" type="text" name="genre">
				</li>
			<% else %>
				<li>
					<label class="input-label" for="genre_id">Genre</label>
					<select class="drop-down" name="genre_id">
						<option value="" selected></option>
						<% @genres.each do |x| %>
							<option value=<%= "#{x.id}" %>><%="#{x.genre_name}"%></option>
						<% end %>
					</select>
				</li>
				<li>
					<label class="input-label" for="genre">New Genre</label>
					<input class="user-input" type="text" name="genre">
				</li>
			<% end %>
		</ul>
		<input class="submit-user-input" type="submit" value="Add Song">
	</form>
</body>
</html>